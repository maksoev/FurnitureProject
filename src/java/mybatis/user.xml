<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper 
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
    
<mapper namespace="user">
    <resultMap id="userResult" type ="model.User">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="login" column="login" />
        <result property="password" column="password" />
        <result property="cellphone" column="cellphone" />
        <result property="email" column="email" />
        <result property="root" column="root" />
        <collection property="ad" javaType="List" ofType="model.Ad" column="user_id" select="selectAdForUser"/>     
    </resultMap>  
    
    
   
  
    <select id="selectById" parameterType="int" resultMap="userResult">  
        SELECT * From user where ID = #{id}
    </select>
    
    <select id="selectAll"  resultMap="userResult">  
        SELECT * FROM user 
    </select>
    
     <select id="selectAdForUser" parameterType="int" resultMap="ad.adResult">  
        SELECT *
        from ad
        WHERE ad.user_id = #{id}
    </select>
    
    <delete id = "delete" parameterType = "model.User"> 
        DELETE from user WHERE ID = #{id}; 
    </delete> 

    <insert id = "insert" parameterType = "model.User"> 
        INSERT INTO user (id, name ,login, password, cellphone, email, root) 
        VALUES (#{id}, #{name}, #{login}, #{password}, #{cellphone}, #{email}, #{root});     
    </insert> 

    <update id = "update" parameterType = "model.User"> 
        UPDATE user SET 
        name= #{name},    
        login= #{login}, 
        password = #{password},
        cellphone = #{cellphone},
        email = #{email},
        root = #{root}
        WHERE ID = #{id}; 
    </update>    
</mapper>